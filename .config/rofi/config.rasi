configuration {
    terminal: "alacritty";

    modes: [ combi ];
    combi-modes: [ drun, ssh, window ];
    show-icons: true;
    dpi: 192;

    timeout {
        action: "kb-cancel";
        delay:  0;
    }

    filebrowser {
        directories-first: true;
        sorting-method:    "name";
    }
}

@theme "arthur.rasi"

mainbox {
    background-color: #000000;
    border-radius: 10px;
}

element {
    children: [ element-text, element-icon ];
}

element-icon {
    size: 1em;
}
